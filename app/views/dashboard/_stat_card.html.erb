<% color_classes = {
  "blue"    => "text-blue-600",
  "green"   => "text-green-600",
  "amber"   => "text-amber-600",
  "red"     => "text-red-600",
  "emerald" => "text-emerald-600",
  "indigo"  => "text-indigo-600"
} %>

<div class="rounded-xl bg-white px-6 py-5 shadow-sm ring-1 ring-gray-900/5">
  <dt class="text-sm font-medium text-gray-500"><%= label %></dt>
  <dd class="mt-1 flex items-baseline gap-2">
    <span class="text-3xl font-bold tracking-tight <%= color_classes[color] || 'text-gray-900' %>"><%= value %></span>
    <% if sublabel.present? %>
      <span class="text-xs text-gray-500"><%= sublabel %></span>
    <% end %>
  </dd>
</div>

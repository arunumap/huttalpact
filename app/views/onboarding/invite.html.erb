<% content_for :title, "Invite your team" %>

<div class="space-y-6">
  <div class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-900/5">
    <h1 class="text-2xl font-bold text-gray-900">Invite a teammate</h1>
    <p class="mt-2 text-sm text-gray-600">Bring others into the workspace so they can track contracts too.</p>

    <%= form_with model: @invitation, url: onboarding_invite_path, class: "mt-6 grid gap-4 sm:grid-cols-3" do |form| %>
      <% if @invitation.errors.any? %>
        <div class="sm:col-span-3 rounded-md bg-red-50 p-4 text-sm text-red-700">
          <ul class="list-disc space-y-1 pl-5">
            <% @invitation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="sm:col-span-2">
        <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email,
            class: "mt-1 block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm",
            placeholder: "teammate@company.com" %>
      </div>

      <div>
        <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role,
            options_for_select(Membership::ROLES.map { |role| [role.titleize, role] }, @invitation.role || Membership::MEMBER_ROLE),
            {},
            class: "mt-1 block w-full rounded-lg border-0 py-2 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm" %>
      </div>

      <div class="sm:col-span-3 flex items-center justify-end">
        <%= form.submit "Send invite",
            data: { turbo_submits_with: "Sending..." },
            class: "rounded-lg bg-amber-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600" %>
      </div>
    <% end %>
  </div>

  <% if @pending_invitations.any? %>
    <div class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-gray-900/5">
      <h2 class="text-sm font-semibold text-gray-900">Pending invitations</h2>
      <div class="mt-4 space-y-3">
        <% @pending_invitations.each do |invite| %>
          <div class="flex items-center justify-between rounded-lg border border-gray-200 px-4 py-3">
            <div>
              <p class="text-sm font-medium text-gray-900"><%= invite.email %></p>
              <p class="text-xs text-gray-500">Role: <%= invite.role.titleize %> Â· Expires <%= l(invite.expires_at.to_date, format: :long) if invite.expires_at %></p>
            </div>
            <span class="rounded-full bg-amber-50 px-2 py-1 text-xs font-semibold text-amber-700">Pending</span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-end gap-3">
    <%= button_to "Finish setup", onboarding_complete_path, method: :post,
        class: "rounded-lg bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
    <%= button_to "Skip for now", onboarding_complete_path, method: :post,
        class: "rounded-lg border border-gray-200 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50" %>
  </div>
</div>

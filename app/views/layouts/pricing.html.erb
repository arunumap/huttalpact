<!DOCTYPE html>
<html class="h-full bg-gray-50">
  <head>
    <title><%= content_for(:title) || "Pricing — HuttalPact" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="HuttalPact">
    <%= seo_meta_tags %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full">
    <%# Simple top nav %>
    <nav class="border-b border-gray-200 bg-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <% if Current.user %>
            <%= link_to dashboard_path, class: "flex items-center gap-2" do %>
              <%= image_tag "sagebadger-logo.svg", alt: "HuttalPact", class: "h-8 w-8" %>
              <span class="text-lg font-bold text-gray-900 tracking-tight">HuttalPact</span>
            <% end %>
          <% else %>
            <%= link_to root_path, class: "flex items-center gap-2" do %>
              <%= image_tag "sagebadger-logo.svg", alt: "HuttalPact", class: "h-8 w-8" %>
              <span class="text-lg font-bold text-gray-900 tracking-tight">HuttalPact</span>
            <% end %>
          <% end %>

          <div class="flex items-center gap-4">
            <% if Current.user %>
              <%= link_to "← Back to Dashboard", dashboard_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
            <% else %>
              <%= link_to "Sign In", new_session_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
              <%= link_to "Sign Up", new_registration_path, class: "rounded-lg bg-amber-600 px-4 py-2 text-sm font-semibold text-white hover:bg-amber-500 transition" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%# Flash messages %>
    <% if flash[:notice] %>
      <div data-controller="flash" role="alert" aria-live="polite" class="mx-auto max-w-5xl mt-4 px-4 sm:px-6 flex items-start gap-3 rounded-md bg-green-50 p-4">
        <svg class="h-5 w-5 shrink-0 text-green-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
        <p class="flex-1 text-sm text-green-700"><%= sanitize flash[:notice], tags: %w[a strong], attributes: %w[href class] %></p>
        <button data-action="click->flash#dismiss" type="button" class="shrink-0 rounded-md text-green-500 hover:text-green-700 focus:outline-none">
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" /></svg>
        </button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div data-controller="flash" role="alert" aria-live="assertive" class="mx-auto max-w-5xl mt-4 px-4 sm:px-6 flex items-start gap-3 rounded-md bg-red-50 p-4">
        <svg class="h-5 w-5 shrink-0 text-red-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
        <p class="flex-1 text-sm text-red-700"><%= sanitize flash[:alert], tags: %w[a strong], attributes: %w[href class] %></p>
        <button data-action="click->flash#dismiss" type="button" class="shrink-0 rounded-md text-red-500 hover:text-red-700 focus:outline-none">
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" /></svg>
        </button>
      </div>
    <% end %>

    <%# Page content %>
    <main>
      <%= yield %>
    </main>

    <%= render "shared/footer" %>
  </body>
</html>

<%# Renders the top 5 unread alerts for the notification bell dropdown %>
<% if @recent_alerts&.any? %>
  <% @recent_alerts.each do |alert| %>
    <div class="px-4 py-3 hover:bg-gray-50">
      <div class="flex items-center gap-2 mb-0.5">
        <%= alert_type_badge(alert.alert_type) %>
        <%= alert_urgency_label(alert) %>
      </div>
      <p class="text-sm text-gray-900 truncate"><%= alert.display_message %></p>
      <div class="mt-1 flex items-center gap-2 text-xs text-gray-500">
        <%= link_to alert.contract.title, contract_path(alert.contract), class: "text-amber-600 hover:text-amber-700 font-medium" %>
        <span>Â·</span>
        <span><%= alert.trigger_date.strftime("%b %d") %></span>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="px-4 py-8 text-center">
    <p class="text-sm text-gray-500">No new notifications</p>
  </div>
<% end %>

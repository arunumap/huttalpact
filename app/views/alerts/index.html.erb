<% content_for(:page_title, "Alerts") %>

<div class="space-y-6">
  <%# Header %>
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-xl font-bold text-gray-900">Alerts</h2>
      <p class="mt-1 text-sm text-gray-500">Stay on top of contract renewals, expirations, and notice periods.</p>
    </div>
    <%= link_to alert_preference_path, class: "inline-flex items-center gap-2 rounded-md bg-white px-3 py-2 text-sm font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
      <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 010 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 010-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      Alert Settings
    <% end %>
  </div>

  <%# Overdue alerts %>
  <% if @overdue_alerts.any? %>
    <div>
      <h3 class="flex items-center gap-2 text-sm font-semibold text-red-700 mb-3">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
        Overdue (<%= @overdue_alerts.size %>)
      </h3>
      <div class="space-y-3">
        <% @overdue_alerts.each do |alert| %>
          <%= render partial: "alerts/alert_card", locals: { alert: alert, urgency: :overdue } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Today's alerts %>
  <% if @today_alerts.any? %>
    <div>
      <h3 class="flex items-center gap-2 text-sm font-semibold text-amber-700 mb-3">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Due Today (<%= @today_alerts.size %>)
      </h3>
      <div class="space-y-3">
        <% @today_alerts.each do |alert| %>
          <%= render partial: "alerts/alert_card", locals: { alert: alert, urgency: :today } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Upcoming alerts %>
  <% if @upcoming_alerts.any? %>
    <div>
      <h3 class="flex items-center gap-2 text-sm font-semibold text-blue-700 mb-3">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
        </svg>
        Upcoming (<%= @upcoming_alerts.size %>)
      </h3>
      <div class="space-y-3">
        <% @upcoming_alerts.each do |alert| %>
          <%= render partial: "alerts/alert_card", locals: { alert: alert, urgency: :upcoming } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Scheduled alerts (beyond 90 days) %>
  <% if @scheduled_alerts.any? %>
    <div>
      <h3 class="flex items-center gap-2 text-sm font-semibold text-gray-500 mb-3">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Scheduled (<%= @scheduled_alerts.size %>)
      </h3>
      <div class="space-y-3">
        <% @scheduled_alerts.each do |alert| %>
          <%= render partial: "alerts/alert_card", locals: { alert: alert, urgency: :scheduled } %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Empty state %>
  <% if @overdue_alerts.empty? && @today_alerts.empty? && @upcoming_alerts.empty? && @scheduled_alerts.empty? %>
    <div class="rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
      </svg>
      <h3 class="mt-4 text-sm font-semibold text-gray-900">No pending alerts</h3>
      <p class="mt-2 text-sm text-gray-500">You're all caught up! Alerts will appear here when contract renewals or expirations are approaching.</p>
    </div>
  <% end %>

  <%# Acknowledged count %>
  <% if @acknowledged_alerts_count > 0 %>
    <p class="text-xs text-gray-400 text-center mt-6">
      <%= @acknowledged_alerts_count %> acknowledged <%= "alert".pluralize(@acknowledged_alerts_count) %>
    </p>
  <% end %>
</div>

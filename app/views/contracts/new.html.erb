<% content_for :page_title, "New Contract" %>

<div class="mx-auto max-w-3xl" data-controller="new-contract-page">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900">New Contract</h2>
    <p class="mt-1 text-sm text-gray-500">Upload a contract document and let AI fill in the details, or enter them manually.</p>
  </div>

  <% if current_organization&.near_contract_limit? %>
    <div class="mb-6">
      <%= render "shared/upgrade_prompt", message: "You have #{current_organization.contracts_remaining} #{'contract'.pluralize(current_organization.contracts_remaining)} remaining on your #{current_organization.plan_display_name} plan." %>
    </div>
  <% end %>

  <%# Upload-first section (shown by default) %>
  <div data-new-contract-page-target="uploadSection">
    <%= render "draft_upload" %>

    <div class="mt-6 text-center">
      <button type="button"
              data-action="click->new-contract-page#showManualForm"
              class="inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
        </svg>
        Skip upload, enter manually
      </button>
    </div>
  </div>

  <%# Manual form section (hidden by default) %>
  <div data-new-contract-page-target="formSection" class="hidden">
    <div class="mb-4">
      <button type="button"
              data-action="click->new-contract-page#showUploadSection"
              class="inline-flex items-center gap-1.5 text-sm font-medium text-amber-600 hover:text-amber-500 transition-colors">
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to upload
      </button>
    </div>

    <%= render "form", contract: @contract, show_upload: false %>
  </div>
</div>

<div id="contract_ai_status">
  <% if current_organization&.near_extraction_limit? && !current_organization&.at_extraction_limit? %>
    <div class="mb-3">
      <%= render "shared/upgrade_prompt", compact: true, message: "You have #{current_organization.extractions_remaining} AI #{'extraction'.pluralize(current_organization.extractions_remaining)} remaining this month." %>
    </div>
  <% end %>

  <% case contract.extraction_status %>
  <% when "processing" %>
    <div class="rounded-xl bg-blue-50 ring-1 ring-blue-200 px-6 py-4">
      <div class="flex items-center gap-3">
        <svg class="h-5 w-5 animate-spin text-blue-600" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <div>
          <p class="text-sm font-semibold text-blue-800">AI is analyzing your contract...</p>
          <p class="text-xs text-blue-600">This usually takes 10-30 seconds. The page will update automatically.</p>
        </div>
      </div>
    </div>
  <% when "completed" %>
    <div class="rounded-xl bg-green-50 ring-1 ring-green-200 px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
          </svg>
          <div>
            <p class="text-sm font-semibold text-green-800">AI extraction complete</p>
            <% doc_count = contract.contract_documents.completed.count %>
            <p class="text-xs text-green-600">
              Extracted from <%= pluralize(doc_count, "document") %>.
            </p>
          </div>
        </div>
        <%= button_to contract_extraction_path(contract), method: :post,
            class: "inline-flex items-center gap-1 rounded-md bg-white px-2.5 py-1.5 text-xs font-medium text-green-700 shadow-sm ring-1 ring-inset ring-green-300 hover:bg-green-50" do %>
          <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182M2.985 19.644l3.181-3.182" />
          </svg>
          Re-extract
        <% end %>
      </div>
      <% if contract.last_changes_summary.present? %>
        <div class="mt-3 rounded-md bg-green-100/60 px-3 py-2">
          <p class="text-xs font-medium text-green-800">Last update:</p>
          <p class="text-xs text-green-700 mt-0.5"><%= contract.last_changes_summary %></p>
        </div>
      <% end %>
    </div>
  <% when "failed" %>
    <div class="rounded-xl bg-red-50 ring-1 ring-red-200 px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <svg class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <div>
            <p class="text-sm font-semibold text-red-800">AI extraction failed</p>
            <p class="text-xs text-red-600">Something went wrong. You can try again or fill in the details manually.</p>
          </div>
        </div>
        <%= button_to contract_extraction_path(contract), method: :post,
            class: "inline-flex items-center gap-1 rounded-md bg-white px-2.5 py-1.5 text-xs font-medium text-red-700 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50" do %>
          <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182M2.985 19.644l3.181-3.182" />
          </svg>
          Retry
        <% end %>
      </div>
    </div>
  <% else %>
    <%# pending or no extraction â€” show extract button if documents exist %>
    <% if contract.contract_documents.completed.any? %>
      <div class="rounded-xl bg-gray-50 ring-1 ring-gray-200 px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
            </svg>
            <div>
              <p class="text-sm font-semibold text-gray-700">Ready for AI extraction</p>
              <p class="text-xs text-gray-500">Let AI analyze your documents and auto-fill contract details.</p>
            </div>
          </div>
          <%= button_to contract_extraction_path(contract), method: :post,
              class: "inline-flex items-center gap-1.5 rounded-lg bg-amber-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-500" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
            </svg>
            Extract with AI
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%# Extraction usage indicator %>
  <% if current_organization %>
    <p class="mt-2 text-xs text-gray-400">
      <% if current_organization.plan_extraction_limit == Float::INFINITY %>
        <%= current_organization.ai_extractions_count %> AI <%= 'extraction'.pluralize(current_organization.ai_extractions_count) %> used this month
      <% else %>
        <%= current_organization.ai_extractions_count %> of <%= current_organization.plan_extraction_limit %> AI extractions used this month
      <% end %>
    </p>
  <% end %>
</div>

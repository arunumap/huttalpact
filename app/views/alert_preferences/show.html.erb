<% content_for(:page_title, "Alert Settings") %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h2 class="text-xl font-bold text-gray-900">Alert Preferences</h2>
    <p class="mt-1 text-sm text-gray-500">Configure how and when you receive contract alerts for <strong><%= current_organization.name %></strong>.</p>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-200 rounded-lg">
    <%= form_with model: @alert_preference, url: alert_preference_path, method: :patch, class: "divide-y divide-gray-200" do |f| %>

      <%# Notification channels %>
      <div class="p-6">
        <h3 class="text-sm font-semibold text-gray-900 mb-4">Notification Channels</h3>
        <div class="space-y-4">
          <label class="flex items-start gap-3 cursor-pointer">
            <%= f.check_box :email_enabled, class: "mt-1 h-4 w-4 rounded border-gray-300 text-amber-600 focus:ring-amber-500" %>
            <div>
              <span class="text-sm font-medium text-gray-900">Email notifications</span>
              <p class="text-xs text-gray-500">Receive alert emails at <%= Current.user&.email_address %></p>
            </div>
          </label>

          <label class="flex items-start gap-3 cursor-pointer">
            <%= f.check_box :in_app_enabled, class: "mt-1 h-4 w-4 rounded border-gray-300 text-amber-600 focus:ring-amber-500" %>
            <div>
              <span class="text-sm font-medium text-gray-900">In-app notifications</span>
              <p class="text-xs text-gray-500">Show alerts in the notification bell and alerts page</p>
            </div>
          </label>
        </div>
      </div>

      <%# Timing %>
      <div class="p-6">
        <h3 class="text-sm font-semibold text-gray-900 mb-4">Alert Timing</h3>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Days before renewal</label>
            <div class="flex items-center gap-2">
              <%= f.number_field :days_before_renewal, min: 1, max: 365, class: "block w-24 rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 text-sm" %>
              <span class="text-sm text-gray-500">days</span>
            </div>
            <p class="mt-1 text-xs text-gray-500">How many days before a contract renewal date to send an alert.</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Days before expiry</label>
            <div class="flex items-center gap-2">
              <%= f.number_field :days_before_expiry, min: 1, max: 365, class: "block w-24 rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 text-sm" %>
              <span class="text-sm text-gray-500">days</span>
            </div>
            <p class="mt-1 text-xs text-gray-500">How many days before a contract expiration date to send an alert.</p>
          </div>
        </div>
      </div>

      <%# Submit %>
      <div class="flex items-center justify-between px-6 py-4 bg-gray-50 rounded-b-lg">
        <%= link_to "Back to Alerts", alerts_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
        <%= f.submit "Save Preferences", data: { turbo_submits_with: "Saving..." }, class: "rounded-md bg-amber-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-amber-500 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
